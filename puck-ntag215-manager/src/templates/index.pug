//- include ./mixins/_githubCorner.pug

html(lang="en") 
  head
    title NTAG215 Tag Management
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=yes")
    meta(name="msapplication-config", content="./browserconfig.xml")
    link(rel="manifest", href="./site.webmanifest")
    link(rel="icon", href="./favicon.ico", type="image/x-icon")
    link(rel="apple-touch-icon", href="./apple-touch-icon.png")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  body
    .navbar.navbar-expand-sm.py-4.sticky-top.bg-light
      .container
        a.navbar-brand(href="#") amiibeau
        .navbar-nav.gap-3#nav-buttons
          a.btn.btn-outline-secondary(target="_blank" href="https://github.com/mykol64/ntag215-puck.js") #[i.bi.bi-github] View on github
          button.btn.btn-primary.btn-md#puckConnect(disabled="disabled") #[i.bi.bi-plus-circle-fill] Connect to Tag
          button.btn.btn-default.btn-md#puckDisconnect.mb3(disabled="disabled") #[i.bi.bi-x-lg] Disconnect from Tag
    .container#mainContainer

      #readme
        include:markdown-it ../../readme.md
        
      #slotsContainer.container.d-grid.gap-3

      pre#code.hljs.d-none
        include:highlight(lang="javascript") ../../ntag215.js

    .editor--terminal
      .editor__canvas

    include kofi.pug
    include modal.pug